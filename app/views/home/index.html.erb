<div id="article_wrap">

    <div id="article_list">

        <% @posts.each do |post| %>
        <div>
          <h2>
            <%= link_to post.content, post %>
          </h2>
          <p>
            <%= post.updated_at %>
          </p>
          <% if user_signed_in? %>
              <%= link_to "編集", "/posts/#{post.id}/edit" %>
              <%= link_to "削除", post, method: :delete %>
          <% end %>
        </div>
        <% end %>

    </div>

</div>

