<div id="title">
    <div>
      <%= @post.updated_at %>書いた人:<%= @user.email %>
      <h1>
        <%= @post.title %>
      </h1>
    </div>
</div>

<div id="article_wrap">

    <div id="content">
        <%= @post.content %>
    </div>

    <div id="sidebar">
        <h2>★PV数ランキング</h2>
        <ul>
          <% Post.most_popular.each do |post| %>
          <li><a href="<%= post_url(post) %>"><%= post.title %><span>( <%= post.redis_page_view %>PV )</span></a></li>
          <% end %>
        </ul>
    </div>
    <div class="clear"></div>

</div>
